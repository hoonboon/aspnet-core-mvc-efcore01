@using MyApp.Common.Public.Dtos

@model PaginationDto

@{
    var prevDisabled = Model.HasPreviousPage ? "" : "disabled";
    var nextDisabled = Model.HasNextPage ? "" : "disabled";

    var currentPageNo = Model.PageIndex;
    var totalPages = Model.TotalPages;
}
<div class="row">
    <div class="text-left col-sm-4">
        <a class="btn btn-primary @prevDisabled" href="#" id="BtnPreviouPage">
            Previous
        </a>
        <a class="btn btn-primary @nextDisabled" href="#" id="BtnNextPage">
            Next
        </a>
    </div>
    <div class="text-center font-weight-bold col-sm-4 mb-2 mt-2">
        Page @currentPageNo of @totalPages
    </div>
    <div class="font-weight-bold col-sm-4">
        <div class="row">
            <div class="col-auto">
                <select asp-for="PageSize" id="PageSize" name="PageSize"
                        asp-items="Html.GetEnumSelectList<PageSizeOptions>()"
                        class="form-control m-0"></select>
            </div>
            <div class="col-auto">
                Rows Per Page
            </div>
        </div>
    </div>
</div>
