@model AspnetCoreWebMvcApp03.Models.SchoolViewModels.UpdateCourseCreditsForm

@{
    ViewData["Title"] = "UpdateCourseCredits";
}

<h1>Update Course Credits</h1>

@if (ViewData["RowsAffected"] == null)
{
    <form asp-action="UpdateCourseCredits" method="post">
        <div class="col-md-4">
            <p>
                Enter a number to multiply every course's credits by:
                <input asp-for="Multiplier" class="form-control" />
                <span asp-validation-for="Multiplier" class="text-danger"></span>
            </p>
            <p>
                <input type="submit" value="Update" class="btn btn-primary" />
            </p>
        </div>
    </form>
}

@if (ViewData["RowsAffected"] != null)
{
    <p>
        Number of rows updated: @ViewData["RowsAffected"]
    </p>
}

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
